var a = 2;
while (a < 16) {   
    console.log(a);
    a = a * 2;
}
//outcome 
//2 4 8 16

var b = 2;
while (b < 30) {   
    if (b > 10) {
        b = b + 6;
    }
    b += 3;
}
console.log(b);
//outcome
//38

var c = 50;
while (c > 0) {   
    if (c > 47) {
        c--;
    }
    else {
        c -= 20;
    }
}
console.log(c);